<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/simplejava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simple_text" />

        <Button
            android:id="@+id/paralleljava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parallel_text" />

        <Button
            android:id="@+id/simplenative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simple_native_text" />
        
       	<Button
            android:id="@+id/parallelnative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parallel_native_text" />
       	
       	<Button
            android:id="@+id/renderscriptbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renderscript_text" />

        <TextView
            android:id="@+id/processorView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
        
      	<TextView
            android:id="@+id/timingView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="320dip"
            android:layout_height="320dip" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="320dip"
            android:layout_height="320dip" />

    </LinearLayout>

</LinearLayout>